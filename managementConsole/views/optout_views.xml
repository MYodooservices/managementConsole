<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    

    <record id="mmc_optout_form_csv" model="ir.ui.view">
      <field name="name">mmc.optout.form</field>
      <field name="model">mmc.optout</field>
      <field name="mode">primary</field>
      <field name="inherit_id" ref="multi_step_wizard.multi_step_wizard_form"/>
      <field name="arch" type="xml">
        <xpath expr="//footer" position="before">

          
          
          <group name="start" >
            <p>file of all mail addresses which should be edited (csv)</p>
            <field name="csv_file" filename="file_name"/> 
            <field name="file_name" invisible="1"/> 

            <!-- <h1>model:</h1>
            <field name="edit_model"/>  -->

            <!-- <h1>Suche:</h1>
            <field name="field_name"/> 
            <field name="field_operator"/> 
            <field name="field_value"/>  -->
            <field name="field_selection"/>
            <field name="field_writeValue" attrs="{'invisible': [('state', '!=', 'start')]}"/> 

            <!-- <field name="many2One_id" attrs="{'invisible': [('state', '!=', 'many2One')]}" /> -->
            <field name="field_boolean" attrs="{'invisible':[('state', '!=', 'boolean')]}" />
            
            
          </group>

        </xpath>   

          
      </field>  
    </record>

    <record id="mmc_optout_action" model="ir.actions.act_window">
      <field name="name">Contact Update</field>
      <field name="res_model">mmc.optout</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="view_id" ref="mmc_optout_form_csv" />
    </record>

    
    <!-- Menu -->
    <menuitem id="mmc_optout_menu"
      name="Contact Update"
      parent="mmc_menu_root"
      action="mmc_optout_action"
      sequence="1" 
    />

    <!-- contacts action menu -->
    <act_window id="mmc_opout_bulkUpdate_action"
      name = "Bulk Update V3"
      res_model = "mmc.optout"
      view_mode = "form"  
      binding_model="res.partner"
      target="new"
    />

    <!-- <record model="ir.actions.act_window" id="mmc_opout_bulkUpdate_action">
      <field name="name">Bulk Update</field>
      <field name="res_model">mmc.optout</field>
      <field name="view_mode">tree</field>
      <field name="binding_model">res.partner</field>
      <field name="target">new</field>
      <field name="view_id" ref="mmc_optout_form_bulk"/>
    </record> -->

     

    <record id = "mmc_optout_form" model = "ir.ui.view">
      <field name="name">Bulk Update V2</field>
      <field name="model">mmc.optout</field>
      <field name="arch" type="xml">
        <form>
          <p>bulk update company: </p>
          <field name="field_company_id"/>
          
          <footer>
            <button name="bulk_update" string="Update" type="object"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    
   

  </data>
</odoo>